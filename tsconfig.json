{
  "compilerOptions": {
    "target": "ES6",
    "outDir": "dist",
    "lib": [
      "es6",
    ],
    "strict": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "types": [
      "jest",
      "node"
    ],
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "checkJs": true,
    "allowJs": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": [
      "./__tests__/typings",
      "./node_modules/@types/"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "src/**/*.ts",
    "!test/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
